pipeline {
   agent any

   stages {

      stage('install req') {
        steps{
          sh 'python3 -m venv env'
          sh 'source env/bin/activate'
          sh 'apt-get -y install python3-pyodbc'
          sh 'apt-get -y install python3-pytest'
          sh 'env/bin/pip install -r requirements.txt'
        }
        }
      stage('run tests'){
        steps{
            sh 'pytest tests.py'
        }
      }

  }
}
