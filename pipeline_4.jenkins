pipeline {
   agent any

   stages {

      stage('install req') {
        steps{
          sh 'apt install python3 -m venv env'
          sh 'source env/bin/activate'
          sh 'pip install -r requirements.txt'
        }
        }
      stage('run tests'){
        steps{
            sh 'python3 tests.py'
        }
      }

  }
}